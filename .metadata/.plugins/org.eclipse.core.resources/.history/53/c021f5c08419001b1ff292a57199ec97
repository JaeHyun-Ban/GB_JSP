<%@page import="java.util.Date"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	/*
	1. Date클래스를 이용해서 xxxx년xx월xx일
	쿠키이름은 show쿠키로 생성해주세요
	*/
	
	Date date = new Date();
	
	
	Cookie show = new Cookie("show", "날짜");

	//쿠키 유통기한
	show.setMaxAge(60*60);
	
	//쿠키 포장해주기
	response.addCookie(show);
	
	
	

%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	
	<%=date %>
	
</body>
</html>








































