<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	Cookie[] cookies = request.getCookies(); //쿠키 얻어오고
	
	String id = null;
	if(cookies != null){
		for(Cookie c : cookies){
			if(c.getName().equals("user_id")){
				id = c.getValue();
			}
		}	
	}


%> 
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>

	<% if(id != null) { %>
		 <h2><%=id %>님 환영합니다!</h2>
	<%} %>

</body>
</html>